<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "wrap_content"
    android:background = "@color/black"
    >
    
    
    <ImageView
        android:id = "@+id/imageView2"
        android:layout_width = "170dp"
        android:layout_height = "170dp"
        android:layout_marginTop = "64dp"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toTopOf = "parent"
        app:srcCompat = "@drawable/rickimage"
        />
    
    
    <TextView
        android:id = "@+id/randomQuote"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginTop = "18dp"
        android:layout_marginBottom="18dp"
        android:text = "A random quote will appear here"
        android:textColor = "@color/white"
        android:textSize = "19sp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toBottomOf = "@+id/imageView2"
        app:layout_constraintBottom_toTopOf="@+id/stranger"
        />
    
    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:id="@+id/stranger"
        android:text = "Hello, Stranger"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toBottomOf = "@+id/randomQuote"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
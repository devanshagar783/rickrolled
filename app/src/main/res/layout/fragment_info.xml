<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:layout_gravity="center"
    android:layout_centerInParent="true"
    app:cardCornerRadius="16dp">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:layout_margin = "16dp"
        >
        
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id = "@+id/charimage"
            android:layout_width = "200dp"
            android:layout_height = "200dp"
            android:layout_marginTop="30dp"
            android:scaleType = "centerCrop"
            android:src = "@drawable/rickimage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        
        <TextView
            android:id = "@+id/charname"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginTop = "21dp"
            android:text = "Rick Sanchez"
            android:textSize = "20sp"
            app:layout_constraintTop_toBottomOf="@id/charimage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id = "@+id/charnamepretext"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginTop = "30dp"
            android:text = "@string/charname_pretext"
            android:textSize = "18sp"
            app:layout_constraintTop_toBottomOf="@id/charname"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id = "@+id/charname2"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginTop = "30dp"
            android:text = "name"
            android:textSize = "18sp"
            app:layout_constraintTop_toBottomOf="@id/charname"
            app:layout_constraintStart_toEndOf="@id/charnamepretext"
            />

        <TextView
            android:id = "@+id/chargenderpretext"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginTop = "8dp"
            android:text = "@string/chargender_pretext"
            android:textSize = "18sp"
            app:layout_constraintTop_toBottomOf="@id/charname2"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id = "@+id/chargender"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginTop = "8dp"
            android:text = "gender"
            android:textSize = "18sp"
            app:layout_constraintTop_toBottomOf="@id/charname2"
            app:layout_constraintStart_toEndOf="@id/chargenderpretext"
            />
        
        <TextView
            android:id = "@+id/charlocationpretext"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginTop = "8dp"
            android:text = "@string/charlocation_pretext"
            android:textSize = "18sp"
            app:layout_constraintTop_toBottomOf="@id/chargender"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id = "@+id/charlocation"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginTop = "8dp"
            android:maxLines="2"
            android:text = "location"
            android:textSize = "18sp"
            app:layout_constraintTop_toBottomOf="@id/chargender"
            app:layout_constraintStart_toEndOf="@id/charlocationpretext"
            />

        <TextView
            android:id = "@+id/charlocationposttext"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginTop = "8dp"
            android:maxLines="2"
            android:text = "@string/charlocation_posttext"
            android:textSize = "18sp"
            app:layout_constraintTop_toBottomOf="@id/chargender"
            app:layout_constraintStart_toEndOf="@id/charlocation"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¯\\_(ツ)_/¯"
            android:layout_marginBottom="60dp"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

